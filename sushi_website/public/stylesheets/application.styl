@import "whitespace-reset.css"
@import "mixins"

html
  background: #000

#container
  width: 1000px
  margin: 0 auto  

body
  font: normal 16px "Droid Sans", sans-serif
  color: colors.default
  background-repeat: repeat repeat
  background-image: url("/images/background-image.png")

header
  padding: 55px 0

#cart
  float: right
  display: inline-block
  background: #000
  padding: 3px
  p
    display: inline-block
  div
    button
      background: colors.emphasis
      color: colors.default
      &:before
        width: 100px
        content: "Hello"

.cart_preview
  border-top: .5px solid colors.data
  margin-bottom: 22px

ul
  padding: 0

li
  display: inline-block
  text-align: center
  margin-bottom: 22px
  background: colors.default
  font-size: 18px
  font-weight: normal
  figure
    img
      display: block
  figcaption
    color: #000
    div
      color: colors.food
      padding: 32px 0
      border-bottom: 1px dotted colors.data
      box_shadow()
      p
        color: colors.data
      a
        color: colors.emphasis        
      + div
        padding: 12px 0
        font-size: 16px
        &:hover
          background: colors.emphasis
          a
            color: colors.default

a
  text-decoration: none

footer
  font-size: 12px
  color: colors.data
  p
    margin: 10px 0
  span
    color: colors.emphasis
