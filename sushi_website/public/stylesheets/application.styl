@import "whitespace-reset.css"
@import "mixins"

html
  background: #000

#container
  width: 1000px
  margin: 0 auto  

body
  font: normal 16px "Droid Sans", sans-serif
  color: colors.default
  background-repeat: repeat repeat
  background-image: url("/images/background-image.png")

header
  padding: 55px 0

#cart
  float: right
  display: inline-block
  background: #000
  padding: 3px
  p
    display: inline-block
  div
    button
      background: colors.emphasis
      color: colors.default
      &:before
        width: 100px
        content: "Hello"

.cart_preview
  border-top: .5px solid colors.data
  margin-bottom: 22px

ul
  padding: 0

li
  display: inline-block
  text-align: center
  margin-bottom: 22px
  background: colors.default
  font-size: 18px
  font-weight: normal
  figure
    position: relative
    width: 200px
    height: 200px
    text-align: center
    img
      display: block
      width: 100%
    .overlay
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 0
      background: rgba(0, 0, 0, 0.6)
      opacity: 0
      img
        width: auto
        position: relative
        top: 88px
        left: 95px
        vertical-align: middle
      &:hover
        opacity: 1
  figcaption
    color: #000
    div
      color: colors.food
      padding: 32px 0
      border-bottom: 1px dotted colors.data
      box_shadow()
      p
        color: colors.data
        margin-top: 5px
      a
        color: colors.emphasis        
      + div
        padding: 12px 0
        font-size: 16px
        &:hover
          background: colors.emphasis
          a
            color: colors.default

a
  text-decoration: none

.menu_item
  background: url("/images/sushi-preview.png")

footer
  font-size: 12px
  color: colors.data
  p
    margin: 10px 0
  span
    color: colors.emphasis
