@import "whitespace-reset.css"
@import "mixins"

html
  background: #000

#container
  width: 1000px
  margin: 0 auto 

body
  font: normal 16px "Droid Sans", sans-serif
  color: colors.default
  background-repeat: repeat repeat
  background-image: url("/images/background-image.png")

header
  font-size: 10px
  padding: 55px 0
  text-transform: uppercase
  .cart_summary
    h3
      padding: 0 0 0 14px
      display: inline-block
    a
      button()

#checkout
  .menu_img_before, .menu_img_after
    height: 50px

.cart_summary
  float: right
  display: inline-block
  background: #000
  padding: 3px
  h3
    color: #bababa
    font-weight: bold
    padding: 20px 14px 10px 14px
    display: block
    + p
      font-size: 30px
  a
    + a
      button()

#cart_content
  padding: 50px 100px
  color: #000
  h1
    font-size: 36px
    padding-bottom: 60px
    color: #2e2e2e
  table
    border-collapse: collapse
    thead
      tr
        td
          font-size: 13px
          text-transform: uppercase
          font-weight: bold
          color: #4a4a4a
    tr
      border-bottom: 1px solid #dadada
      margin: 0
      max-height: 100px
      overflow: hidden
      .img_cover
        height: 100px
        width: 200px
        overflow: hidden
      td
        padding: 0
        margin: 0
        font-size: 21px
        width: 200px
        &:nth-child(2)
          padding-left: 40px
          padding-right: 80px
          width: 175px        
        &:last-child
          text-align: right
          width: 100px
  p
    font-size: 26px
    text-align: right
    span
      font-size: 10px
      color: #787878
      padding-right: 15px
      text-transform: uppercase
      
.cart_preview
  font-size: 10px
  text-transform: uppercase
  border-top: .5px solid colors.data
  margin-bottom: 22px
  max-height: 122px
  background: #000
  ul
    overflow: hidden
    width: 800px
    display: inline-block
    figcaption
      text-align: right
      padding-top: 4px
      font-size: 10px
      color: colors.default
      background: #000
  figure
    height: 100px
    width: 100px
  .cart_summary
    width: 200px
    display: inline-block
    background: #1f1f1f
    height: 100%
    padding: 0
    span
      button()

ul
  padding: 0

li
  display: inline-block
  text-align: center
  margin-bottom: 22px
  background: colors.default
  font-size: 18px
  font-weight: normal
  figure
    position: relative
    width: 200px
    height: 200px
    text-align: center
    img
      display: block
      width: 100%
    .overlay
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 0
      background: rgba(0, 0, 0, 0.6)
      opacity: 0
      img
        width: auto
        position: relative
        top: 88px
        left: 95px
        vertical-align: middle
      &:hover
        opacity: 1
  figcaption
    color: #000
    div
      color: colors.food
      padding: 32px 0
      border-bottom: 1px dotted colors.data
      box_shadow()
      p
        color: colors.data
        margin-top: 5px
      a
        color: colors.emphasis        
      + div
        padding: 12px 0
        font-size: 16px
        &:hover
          background: colors.emphasis
          a
            color: colors.default

a
  text-decoration: none
  color: colors.emphasis

.menu_img_before, .menu_img_after
  background: url("/images/sushi-preview.png")
  height: 200px
  display: block

.food_item
  height: 600px
  box-sizing: border-box
  #menu_content
    height: 200px
    #menu_info
      display: inline-block
      div, table
        display: inline-block
        color: #000
        background: colors.default
      #menu_data
        vertical-align: top
        width: 400px
        height: 200px
        h2
          padding: 30px
          padding-bottom: 10px                
          font-size: 20px
        p
          padding: 30px
          padding-top: 0px
          font-size: 12px
        #menu_cart_info
          width: 100%
          padding: 30px
          padding-top: 20px
          border-top: .5px dotted colors.data
          box-sizing: border-box
    .previous, .next
      display: inline-block
      content: 'hello'
      width: 100px
      height: 200px
      background: #000
      &:hover
        background: colors.emphasis  
  table
    height: 200px
    width: 200px
    padding: 10px
    box-sizing: border-box

#cart_content
  display: block
  background: colors.default

footer
  clear: both
  padding: 20px 0
  font-size: 12px
  color: colors.data
  p
    margin: 10px 0
  span
    color: colors.emphasis
