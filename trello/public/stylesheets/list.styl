.list_header
  h3, span
    display: inline-block
    color: colors.secondary.color
    padding: 10px
  span
    float: right
    padding: 4px
    width: 26px
    height: 26px
    &:hover
      cursor: default

ul.list_container
  min-height: 10px
  li.ui-sortable-handle
    background: colors.primary.default
    padding: 6px 6px 2px 8px
    margin: 8px
    border-radius: 4px
    text-decoration: none

.add_card
  margin-top: 10px
  padding: 10px

#add_list_input
  display: inline-block
  margin: 0 8px
  vertical-align: top
  input
    border-radius: 4px
    padding: 7px
    width: 248px
    height: 18px
    color: rgba(255,255,255,.7)
    background: rgba(0,0,0,.1)
    &:hover
      background: rgba(0,0,0,.2)

.wrapper.list
  flex-grow: 1
  min-width: 270px
  max-width: 270px      

.ui-sortable-placeholder
  background: rgba(0,0,0,.2)
  min-width: 270px
  max-width: 270px
  margin-left: 8px 
  
.card_item_labels_display
  span
    display: inline-block
    border-radius: 10px
    width: 40px
    margin-right: 2px
    height: 7px    

.card_icons
  color: colors.secondary.secondary_color
  padding: 10px 0
  a
    text-decoration: none
  span
    padding-bottom: 1px 2px
    margin: 0 4px 4px 0

