.list_header
  h3, span
    display: inline-block
    color: colors.secondary.color
    padding: 10px
  span
    float: right
    padding: 4px
    width: 26px
    height: 26px
    &:hover
      cursor: default

ul.list_container
  min-height: 10px

li
  background: colors.primary.default
  padding: 6px 6px 2px 8px
  margin: 8px
  border-radius: 4px
  a
    text-decoration: none

#add_card
  margin-top: 10px
  padding: 10px

#add_list_input
  display: inline-block
  margin: 0 8px
  vertical-align: top
  input
    border-radius: 4px
    padding: 7px
    width: 248px
    height: 18px
    color: rgba(255,255,255,.7)
    background: rgba(0,0,0,.1)
    &:hover
      background: rgba(0,0,0,.2)

.ui-sortable-placeholder
  background: rgba(0,0,0,.2)