@import "whitespace-reset.css"
@import "mixins"
@import "header"
@import "board_top"
@import "list"
@import "edit_card"
@import "board_menu"

html, input
  font: 14px "Helvetica Neue", Arial, Helvetica,sans-serif
  background: colors.primary.bg
  color: colors.primary.default

input
  border: none
a
  cursor: pointer

h1
  font-size: 18px
  font-weight: bold

h3
  font-weight: bold

div
  border-radius: 4px

header
  height: 40px
  background: colors.primary.dark_bg
  #board_info
    div
      background: colors.primary.light_bg
      border-radius: 4px

.wrapper
  background: colors.secondary.bg
  color: colors.secondary.color
  .interior
    background: colors.primary.default

a.menu_button
  div
    background: colors.primary.default
    border: 1px solid colors.secondary.detail    
    &:hover
      background: #298FCA
      border-color: #298FEE #298FCA #026AA7

.list
  width: 300px
  display: inline-block
  margin-left: 10px
  vertical-align: top

.modal
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 9
  background: rgba(0,0,0,0.6)

#board_canvas
  overflow: scroll
  line-height: 18px