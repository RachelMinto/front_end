@import "whitespace-reset.css"
@import "mixins"

html
  font: 14px "Helvetica Neue", Arial, Helvetica,sans-serif
  background: colors.primary.bg
  color: colors.primary.default_color

a
  cursor: pointer

h1
  font-size: 18px
  font-weight: bold

h3
  font-weight: bold

header
  height: 40px
  background: colors.primary.dark_bg
  #board_info
    div
      background: colors.primary.light_bg
      border-radius: 4px

.wrapper
  background: colors.secondary.bg
  color: colors.secondary.color
  .interior
    background: colors.primary.default_color

.list
  width: 300px