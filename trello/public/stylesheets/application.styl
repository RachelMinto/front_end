@import "whitespace-reset.css"
@import "mixins"
@import "header"
@import "board_top"
@import "list"

html
  font: 14px "Helvetica Neue", Arial, Helvetica,sans-serif
  background: colors.primary.bg
  color: colors.primary.default

a
  cursor: pointer

h1
  font-size: 18px
  font-weight: bold

h3
  font-weight: bold

textarea
  transition: background 85ms ease-in,border-color 85ms ease-in

header
  height: 40px
  background: colors.primary.dark_bg
  #board_info
    div
      background: colors.primary.light_bg
      border-radius: 4px

.wrapper
  background: colors.secondary.bg
  color: colors.secondary.color
  .interior
    background: colors.primary.default

.list
  width: 300px
  display: inline-block
  margin-left: 10px
