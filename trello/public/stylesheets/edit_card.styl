.archived_header
  height: 25px
  background-color: red

.edit_card_menu
  .wrapper
    width: 730px
    height: 604px
    margin: 0 auto
    margin-top: 48px
    margin-bottom: 80px
    background: #EDEFF0
    h3
      margin-bottom: 12px
      margin-top: 20px
    .card_action_menu
      float: right
      padding: 8px 12px 12px 0
      width: 140px
      height: 499px
      margin-right: 20px
      .card_actions_menu
        a
          margin-top: 20px
          display: block

.card_title_info
  width: 616px
  display: inline-block

i.icon-cancel
  height: 30px
  width: 30px
  padding: 4px
  text-align: center 
  cursor: pointer  

.menu_button          
  menu_button()
  &:hover
    cursor: pointer
    color: colors.primary.default    
    border-color: #298FCA #298FCA #026AA7
    background: #298FCA 

.card_menu_popup.wrapper
  width: 300px
  background: colors.primary.default
  padding: 10px
  box-sizing: border-box
  margin-top: 0

.card_label
  width: 240px
  height: 34px
  display: block
  cursor: pointer
  transition: padding 85ms,margin 85ms,box-shadow 85ms
  border-radius: 3px
  margin-left: 4px
  margin-top: 4px

.card_label.label_green   
  &:hover
    box-shadow: -8px 0 #519839

.card_label.label_orange
  &:hover
    box-shadow: -8px 0 #D29034

.card_label.label_red
  &:hover
    box-shadow: -8px 0 #B04632

.card_label.label_yellow
  &:hover
    box-shadow: -8px 0 #D9B51C

.card_label.label_blue
  &:hover
    box-shadow: -8px 0 #055A8C

.card_label.label_purple
   &:hover
    box-shadow: -8px 0 #89609E
   

.card_content
  display: inline-block
  padding: 8px 12px 12px 50px
  width: 508px
  box-sizing: border-box

.card_action_menu
  display: inline-block
  padding: 8px 12px 12px 0
  width: 140px
  box-sizing: border-box

.card_content_header
  padding-top: 12px
  padding-left: 50px
  h3
    font-size: 18px
    display: inline-block
  i
    float: right
    font-size: 24px

textarea.comment_input
  height: 75px
  resize: none
  border: 0
  border-bottom: solid 30px transparent
  padding: 9px 11px 0px 11px
  width: 100%
  box-sizing: border-box
  font-size: 14px

.send_comment_wrapper
  margin-top: 8px
  height: 36px

.submit_info_button
  button()
  submit_button_inactive()

.new_card_title_input
  input
    standard_text_input()

.setting.menu_button
  background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%)
  box-sizing: border-box
  border: 1px solid #E2E4E6
  border-bottom-color: #CDD2D4
  cursor: pointer
  display: block
  font-weight: 700
  max-width: 300px
  overflow: hidden
  padding: 7px
  user-select: none
  height: 50px
  .list_select_options,
  .position_select_options
    border: none
    cursor: pointer
    height: 50px
    left: 0
    margin: 0
    opacity: 0
    position: absolute
    top: 0
    z-index: 2
    width: 100%

.all_lists_dropdown_placeholder,
.all_positions_dropdown_placeholder
  position: relative
