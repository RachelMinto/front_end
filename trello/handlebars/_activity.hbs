<div class="card_activities">
  <div class="activities_header">
    <i class="icon-activity"></i><h3>Activity</h3>
  </div>
  <div class="all_activities">
   {{#each activities}}
      {{#ifAction activities.action value="comment"}} 
      <div class="comment_card_activity_item">
        <p><span class="member-initials"></span><strong>{{this.user}}</strong> on {{this.list}}</p>
        <div class="posted_comment_content">{{this.title}}</div>
        <p class="timestamp"> on {{this.timestamp}}</p>
      </div>
      <hr>    
      {{else}} {{#ifAction activities.action value="moved"}} 
      {{debug this}}           
        <div class="moved_card_activity_item">
          <p><span class="member-initials"></span><strong>{{this.user}} </strong> moved {{this.card}} from {{this.oldList}} to {{this.newList}}</p>
          <p class="timestamp"> on {{this.timestamp}}</p>
        </div>
        <hr> 
      {{/ifAction}} {{/ifAction}}                      
    {{/each}}
  </div>
</div>
